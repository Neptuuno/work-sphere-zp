@page
@model IndexModel
@{
    ViewData["Title"] = "Profile Settings";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="border border-black shadow-offset w-full p-6">
    <h1 class="text-5xl mb-8">@ViewData["Title"]</h1>
    <partial name="_StatusMessage" model="Model.StatusMessage"/>
    <form enctype="multipart/form-data" id="profile-form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
        <div class="flex flex-col gap-2 ">
            <div class="w-56 mb-4">
                <label asp-for="Input.UserName" class="block text-xl leading-6 text-gray-900"></label>
                <input asp-for="Input.UserName" class="appearance-none block w-full bg-white rounded p-2 text-gray-900 shadow-offset ring-1 ring-inset ring-black placeholder:text-gray-400 focus-visible:outline-none sm:text-sm sm:leading-6"/>
                <span asp-validation-for="Input.UserName" class="text-red-500"></span>
            </div>
            <div class="w-56">
                <label asp-for="Input.Bio" class="block text-xl leading-6 text-gray-900"></label>
                <div class="mt-2">
                    <textarea asp-for="Input.Bio" class="block h-32 w-full rounded p-2 text-gray-900 shadow-offset ring-1 ring-inset ring-black placeholder:text-gray-400 focus-visible:outline-none sm:text-sm sm:leading-6 resize-y"></textarea>
                </div>
                <span asp-validation-for="Input.Bio" class="text-red-500"></span>
            </div>
            <div class="w-56">
                <label asp-for="Image" class="block text-xl leading-6 text-gray-900"></label>
                <div class="mt-2 relative">
                    <label for="fileUpload" class="w-full rounded p-2 text-gray-900 shadow-offset ring-1 ring-inset ring-black placeholder:text-gray-400 focus-visible:outline-none sm:text-sm sm:leading-6 cursor-pointer flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 16.5V9.75m0 0 3 3m-3-3-3 3M6.75 19.5a4.5 4.5 0 0 1-1.41-8.775 5.25 5.25 0 0 1 10.233-2.33 3 3 0 0 1 3.758 3.848A3.752 3.752 0 0 1 18 19.5H6.75Z"/>
                        </svg>
                    </label>
                    <input asp-for="Image" type="file" id="fileUpload" class="file:hidden"/>
                </div>
                <span asp-validation-for="Image" class="text-red-500"></span>
            </div>
        </div>
        <div class="flex justify-start mt-6">
            <button id="update-profile-button" type="submit" class="btn-primary">Save</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}