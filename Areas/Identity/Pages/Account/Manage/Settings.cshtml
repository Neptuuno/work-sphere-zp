@page
@model Settings

@{
    ViewData["Title"] = "Settings page";
}

<h1>Settings page</h1>
<div class="row">
    <div class="col-md-6">
        <form enctype="multipart/form-data" method="post">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <label asp-for="Input.Age" class="form-label"></label>
                <input asp-for="Input.Age" class="form-control" placeholder="Please enter your age."/>
                <button type="submit" class="btn btn-link">Update User Settings</button>
            </div>
            <div class="form-group">
                <label asp-for="Input.ImageUrl" class="control-label"></label>
                <input asp-for="Input.ImageUrl" type="file" class="form-control"/>
                <span asp-validation-for="Input.ImageUrl" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}