@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="flex flex-col items-center border-black border shadow-offset p-6">
    <form enctype="multipart/form-data" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="w-full max-w-md">
        <h2 class="text-3xl mb-8">Create a new <span class="text-primary">account</span>.</h2>
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
        <div class="mb-4">
            <label asp-for="Input.Email" class="block text-xl leading-6 text-gray-900"></label>
            <input asp-for="Input.Email" class="appearance-none block w-full bg-white rounded p-2 text-gray-900 shadow-offset ring-1 ring-inset ring-black placeholder:text-gray-400 focus-visible:outline-none sm:text-sm sm:leading-6" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
            <span asp-validation-for="Input.Email" class="text-red-500"></span>
        </div>
        <div class="mb-4">
            <label asp-for="Input.Password" class="block text-xl leading-6 text-gray-900"></label>
            <input asp-for="Input.Password" class="appearance-none block w-full bg-white rounded p-2 text-gray-900 shadow-offset ring-1 ring-inset ring-black placeholder:text-gray-400 focus-visible:outline-none sm:text-sm sm:leading-6" autocomplete="new-password" aria-required="true" placeholder="password"/>
            <span asp-validation-for="Input.Password" class="text-red-500"></span>
        </div>
        <div class="mb-4">
            <label asp-for="Input.ConfirmPassword" class="block text-xl leading-6 text-gray-900"></label>
            <input asp-for="Input.ConfirmPassword" class="appearance-none block w-full bg-white rounded p-2 text-gray-900 shadow-offset ring-1 ring-inset ring-black placeholder:text-gray-400 focus-visible:outline-none sm:text-sm sm:leading-6" autocomplete="new-password" aria-required="true" placeholder="password"/>
            <span asp-validation-for="Input.ConfirmPassword" class="text-red-500"></span>
        </div>
        <button id="registerSubmit" type="submit" class="w-full py-2 px-4 btn-primary">Register</button>
    </form>
    <p class="mt-2">Returning user?</p>
    <a class="text-primary" asp-page="./Login">click here to login</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}