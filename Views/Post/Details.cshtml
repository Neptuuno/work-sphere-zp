@using SocialNetwork.Services
@model SocialNetwork.Models.PostModel
@inject FileService FileService

@{
    ViewData["Title"] = "Details";
}

<div class="border border-black shadow-offset w-7/12 p-6">
    <div class="flex gap-2">
        @* <img src="@FileService.GetImageFullUrl(Model.ApplicationUser.ImageUrl)"/> *@
        <p>@Model.ApplicationUser.UserName</p>
    </div>
    <h1 class="text-5xl mb-8">@Model.Title</h1>
    <div class="flex justify-between">
        <div class="w-64">
            <label class="block text-xl leading-6 text-gray-900">@Html.DisplayNameFor(model => model.PostType)</label>
            <p class="block w-full rounded p-2 text-gray-900 shadow-offset ring-1 ring-inset ring-black placeholder:text-gray-400 focus-visible:outline-none sm:text-sm sm:leading-6">@Html.DisplayFor(model => model.PostType)</p>
        </div>
    </div>
    <div class="flex justify-between">
        <div class="w-64">
            <label class="block text-xl leading-6 text-gray-900">@Html.DisplayNameFor(model => model.Category)</label>
            <p class="block w-full rounded p-2 text-gray-900 shadow-offset ring-1 ring-inset ring-black placeholder:text-gray-400 focus-visible:outline-none sm:text-sm sm:leading-6">@Html.DisplayFor(model => model.Category)</p>
        </div>
    </div>
    <div class="">
        <label class="block text-xl leading-6 text-gray-900">@Html.DisplayNameFor(model => model.Description)</label>
        <p class="block h-64 w-full rounded p-2 text-gray-900 shadow-offset ring-1 ring-inset ring-black placeholder:text-gray-400 focus-visible:outline-none sm:text-sm sm:leading-6">@Html.DisplayFor(model => model.Description)</p>
    </div>
    <div class="">
        <label class="block text-xl leading-6 text-gray-900">@Html.DisplayNameFor(model => model.ImageUrl)</label>
        <img src="@FileService.GetImageFullUrl(Model.ImageUrl)" class="w-full h-auto rounded p-2 shadow-offset ring-1 ring-inset ring-black focus-visible:outline-none sm:text-sm sm:leading-6" alt="post image"/>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>