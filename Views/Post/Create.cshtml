@model SocialNetwork.Models.ViewModels.PostViewModel

@{
    ViewData["Title"] = "Create";
}


<div class="border border-black shadow-offset w-7/12 p-6">
    <h1 class="text-5xl mb-8">Add new <span class="text-primary">post</span></h1>
    <form enctype="multipart/form-data" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
        <div class="flex justify-between">
            <div class="w-64">
                <label asp-for="PostType" class="block text-xl leading-6 text-gray-900"></label>
                <div class="relative">
                    <select asp-for="PostType" asp-items="Html.GetEnumSelectList<PostType>()" class="appearance-none block w-full bg-white rounded p-2 text-gray-900 shadow-offset ring-1 ring-inset ring-black placeholder:text-gray-400 focus-visible:outline-none sm:text-sm sm:leading-6"></select>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="mr-2 w-6 h-6 absolute right-0 top-1/2 transform -translate-y-1/2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5"/>
                    </svg>
                </div>
                <span asp-validation-for="PostType" class="text-red-500"></span>
            </div>
            <div class="w-64">
                <label asp-for="Title" class="block text-xl leading-6 text-gray-900"></label>
                <div class="">
                    <input asp-for="Title" class="block w-full rounded p-2 text-gray-900 shadow-offset ring-1 ring-inset ring-black placeholder:text-gray-400 focus-visible:outline-none sm:text-sm sm:leading-6"/>
                </div>
                <span asp-validation-for="Title" class="text-red-500"></span>
            </div>
        </div>
        <div class="flex justify-between">
            <div class="w-64">
                <label asp-for="Category" class="block text-xl leading-6 text-gray-900"></label>
                <div class="mt-2">
                    <input asp-for="Category" class="block w-full rounded p-2 text-gray-900 shadow-offset ring-1 ring-inset ring-black placeholder:text-gray-400 focus-visible:outline-none sm:text-sm sm:leading-6"/>
                </div>
                <span asp-validation-for="Category" class="text-red-500"></span>
            </div>
            <div class="w-64">
                <label asp-for="ImageUrl" class="block text-xl leading-6 text-gray-900"></label>
                <div class="mt-2 relative">
                    <label for="fileUpload" class="w-full rounded p-2 text-gray-900 shadow-offset ring-1 ring-inset ring-black placeholder:text-gray-400 focus-visible:outline-none sm:text-sm sm:leading-6 cursor-pointer flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 16.5V9.75m0 0 3 3m-3-3-3 3M6.75 19.5a4.5 4.5 0 0 1-1.41-8.775 5.25 5.25 0 0 1 10.233-2.33 3 3 0 0 1 3.758 3.848A3.752 3.752 0 0 1 18 19.5H6.75Z" />
                        </svg>
                    </label>
                    <input asp-for="ImageUrl" type="file" id="fileUpload" class="file:hidden"/>
                </div>
                <span asp-validation-for="ImageUrl" class="text-red-500"></span>
            </div>
                    @* <input asp-for="ImageUrl" type="file" class="file:hidden block w-full rounded p-2 text-gray-900 shadow-offset ring-1 ring-inset ring-black placeholder:text-gray-400 focus-visible:outline-none sm:text-sm sm:leading-6"/> *@
        </div>
        <div class="">
            <label asp-for="Description" class="block text-xl leading-6 text-gray-900"></label>
            <div class="mt-2">
                <textarea asp-for="Description" class="block h-64 w-full rounded p-2 text-gray-900 shadow-offset ring-1 ring-inset ring-black placeholder:text-gray-400 focus-visible:outline-none sm:text-sm sm:leading-6 resize-y"></textarea>
            </div>
            <span asp-validation-for="Description" class="text-red-500"></span>
        </div>

        <div class="flex justify-end mt-6">
            <input type="submit" value="Create" class="btn-primary"/>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>