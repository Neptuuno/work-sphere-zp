@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "User Page";
}

<h2>Users List</h2>
<table>
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
                        <th>@Html.DisplayNameFor(model => model.UserName)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>@Html.DisplayNameFor(model => model.Age)</th>
                        <th>@Html.DisplayNameFor(model => model.Posts)</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td><a asp-controller="User" asp-action="Detail" asp-route-id="@user.Id">@user.UserName</a></td>
                <td>@user.Email</td>
                <td>@user.Age</td>
                <td>
                    @if(user.Posts.Any()) 
                    {
                        <ul>
                            @foreach(var post in user.Posts) 
                            {
                                <li>@post.Title - @post.PostedOn.ToShortDateString()</li>
                            }
                        </ul>
                    }
                    else 
                    {
                        <text>No posts</text>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
