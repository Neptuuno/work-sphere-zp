<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - WorkSphere</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/SocialNetwork.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true"/>
</head>
<body>
<div class="flex min-h-full flex-col">
    <div class="mx-auto flex justify-between px-4 py-10 sm:px-6 lg:px-8">
        <aside class="sticky top-8 hidden w-64 shrink-0 xl:block">
            <!-- Left column area -->
            <nav>
                <ul class="">
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="">
                            <a class="" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
                        </li>
                    }
                    <li class="">
                        <a class="" asp-area="" asp-controller="Post" asp-action="Index">Home</a>
                    </li>
                    <li class="">
                        <a class="" asp-area="" asp-controller="Post" asp-action="Create">New Post</a>
                    </li>
                    <li class="">
                        <a class="" asp-area="" asp-controller="" asp-action="">Search</a>
                    </li>
                    @* <li class=""> *@
                    @*     <a class="" asp-area="" asp-controller="User" asp-action="Index">Show Users</a> *@
                    @* </li> *@
                    <li class="">
                        <a class="" asp-area="" asp-controller="Chat" asp-action="Index">Chats</a>
                    </li>
                    <li>
                        <a asp-area="Identity" asp-page="/Account/Manage/Settings" >Profile</a>
                    </li>
                </ul>
            </nav>
        </aside>

        <main class="flex-1">
            @RenderBody()
        </main>
        <aside class="sticky flex justify-end top-8 hidden w-64 shrink-0 lg:block">
            <!-- Right column area -->
            @foreach(var chat in  ){
            <div>
                <p class="text-right">something</p>
            </div>
            }
        </aside>

    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Work Sphere
        </div>
    </footer>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>